<%- include('../partials/top.ejs') %>
    <!-- sidebar -->
    <%- include('../partials/sidebar.ejs') %>

        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('../partials/header.ejs') %>
                    <div class="container-fluid">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">İşlemler Listesi</h1>
                        </div>
                        <div class="row">
                            <div class="col-xl-6 col-md-6 mb-4">
                                <form action="/operations" method="POST">
                                    <div class="form-group">
                                        <label>İşlem Adı</label>
                                        <input type="text" class="form-control" placeholder="İşlem Adı"
                                            name="OperationName">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1">İşlem Grubu</label>
                                        <input type="text" class="form-control" placeholder="İşlem Grubu"
                                            name="OperationGroup">
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-success">Ekle</button>
                                </form>
                            </div>
                            <div class="col-xl-6 col-md-6 mb-4">
                                <ul class="list-group">
                                    <% operations.forEach(operation=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">

                                            <%= operation.OperationName %>
                                                <div>
                                                    <span class="badge badge-primary badge-pill">
                                                        <%= operation.OperationGroup %>
                                                    </span>
                                                    <a href="/delete-operation-card/<%= operation.Id %>">
                                                        <span class="badge badge-danger badge-pill">
                                                            Sil
                                                        </span>
                                                    </a>
                                                </div>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>
            </div>
            <%- include('../partials/footer.ejs') %>
        </div>